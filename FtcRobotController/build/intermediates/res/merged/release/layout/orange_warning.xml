<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/orange_warning"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="5dip"
              android:background="@layout/shape"
              >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dip"
        android:padding="1dip"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/orangetext0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dip"
            android:text="Example Title"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/orangetext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="3dip"
            android:text="Example message text"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/orangeTextOKButton"
            style="@style/OrangeTextButton"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF6700"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@string/buttonNameOK"/>

    </LinearLayout>
</LinearLayout>
